<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3EFEF"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_my_workout_organizer" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewUserProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewUserProfile"
        app:layout_constraintStart_toEndOf="@+id/cardViewUserProfile"
        app:layout_constraintTop_toTopOf="@+id/cardViewUserProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>