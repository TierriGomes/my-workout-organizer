<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_division_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_division_button</item>
        <item name="android:fontFamily">@font/caesar_dressing</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="style_small_texts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>